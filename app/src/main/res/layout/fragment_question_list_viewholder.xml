<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            app:layout_constraintBottom_toBottomOf="@+id/view_holder_textview_question"
            app:layout_constraintTop_toBottomOf="@+id/view_holder_textview_question">

            <TextView
                android:id="@+id/viewholderTextviewName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Pushkar Kaswankar"
                app:layout_constraintStart_toStartOf="@+id/viewHolderTextviewQuestion"
                app:layout_constraintTop_toBottomOf="@+id/viewHolderTextviewQuestion" />

            <TextView
                android:id="@+id/viewHolderTextviewQuestion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="How to center a div within a div?"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/guideline2"
                app:layout_constraintStart_toStartOf="@+id/guideline3"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/postedOn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="5dp"
                android:text="Asked On:"
                app:layout_constraintBottom_toBottomOf="@+id/imageView2"
                app:layout_constraintEnd_toStartOf="@+id/viewholderTextviewPostedDate"
                app:layout_constraintTop_toTopOf="@+id/imageView2" />

            <TextView
                android:id="@+id/viewholderTextviewPostedDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25-10-2021"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/postedOn"
                app:layout_constraintEnd_toStartOf="@+id/guideline2"
                app:layout_constraintTop_toTopOf="@+id/postedOn" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/viewholderTextviewName"
                app:layout_constraintStart_toEndOf="@+id/viewholderTextviewName"
                app:layout_constraintTop_toTopOf="@+id/viewholderTextviewName" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.98" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="20dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>